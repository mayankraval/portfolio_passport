<% include ../partials/header.ejs %>
<main class="container">
    <h1>Edit a User</h1>
    <div class="col-sm-4">
        <form method="post">
            <fieldset class="form-group">
                <label for="fname">Field Name: *</label>
                <input name="fname" type="text" class="form-control" required value="<%= contact.fname %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="fvalue">Field Value: *</label>
                <input name="fvalue" type="text" class="form-control" required value="<%= contact.fvalue %>" />
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                <a href="/business/delete/<%= user._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/business" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </div>

</main>
<% include ../partials/footer.ejs %>
