<%- include ../partials/header.ejs %>
<body>
<main class="container">
    <h1>Edit an Field</h1>

    <form method="post">
        <fieldset class="form-group">
            <label for="name" class="col-sm-2">Field Name: *</label>
            <input name="name" required value="<%= contact.name %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="value" class="col-sm-2">Field Value: *</label>
            <textarea name="value" required><%= contact.value %></textarea>
        </fieldset>
        <button type="submit" class="col-sm-offset-2 btn btn-success">Submit</button>
        <a href="/contacts/delete/<%= contact._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
            <button type="button" class="btn btn-danger">Delete</button>
        </a>

    </form>

</main>

</body>
</html>